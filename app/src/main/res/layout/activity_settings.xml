
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_base" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/general"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#053574"
                android:paddingBottom="8dp"/>

            <LinearLayout
                android:id="@+id/languageSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/language"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/languageValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/english"
                    android:textSize="14sp"
                    android:textColor="#666666"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sync"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#053574"
                android:layout_marginTop="16dp"
                android:paddingBottom="8dp"/>

            <LinearLayout
                android:id="@+id/syncSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sync_frequency"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/syncValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/every_6_hours"
                    android:textSize="14sp"
                    android:textColor="#666666"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notifications"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#053574"
                android:layout_marginTop="16dp"
                android:paddingBottom="8dp"/>

            <LinearLayout
                android:id="@+id/notificationsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/study_reminders"
                    android:textSize="16sp"/>

                <Switch
                    android:id="@+id/notificationsSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/appearance"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#053574"
                android:layout_marginTop="16dp"
                android:paddingBottom="8dp"/>

            <LinearLayout
                android:id="@+id/themeSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/theme"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/themeValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/light"
                    android:textSize="14sp"
                    android:textColor="#666666"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/controls"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#053574"
                android:layout_marginTop="16dp"
                android:paddingBottom="8dp"/>

            <LinearLayout
                android:id="@+id/gesturesSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/gestures"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tap_to_flip_swipe_to_rate"
                    android:textSize="14sp"
                    android:textColor="#666666"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/backup"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#053574"
                android:layout_marginTop="16dp"
                android:paddingBottom="8dp"/>

            <LinearLayout
                android:id="@+id/backupSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/auto_backup"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/backupValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/daily"
                    android:textSize="14sp"
                    android:textColor="#666666"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>